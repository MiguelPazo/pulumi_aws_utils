{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:CreateLogGroup"
      ],
      "Resource": "arn:aws:logs:{{region}}:{{accountId}}:log-group:/aws/lambda/{{logGroup}}*:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:{{region}}:{{accountId}}:log-group:/aws/lambda/{{logGroup}}*:*:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "sns:Publish"
      ],
      "Resource": "{{snsArn}}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:GenerateDataKey"
      ],
      "Resource": "{{kmsKeyArn}}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "cloudwatch:ListTagsForResource"
      ],
      "Resource": "*"
    }
  ]
}
