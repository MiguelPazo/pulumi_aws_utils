{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "GetReplicationConfiguration",
      "Effect": "Allow",
      "Action": [
        "s3:GetReplicationConfiguration",
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::{{bucketPrefix}}*"
    },
    {
      "Sid": "GetObjectsFromSource",
      "Effect": "Allow",
      "Action": [
        "s3:GetObjectVersionForReplication",
        "s3:GetObjectVersionAcl",
        "s3:GetObjectVersionTagging",
        "s3:GetObjectRetention",
        "s3:GetObjectLegalHold"
      ],
      "Resource": "arn:aws:s3:::{{bucketPrefix}}*/*"
    },
    {
      "Sid": "ReplicateToDestination",
      "Effect": "Allow",
      "Action": [
        "s3:ReplicateObject",
        "s3:ReplicateDelete",
        "s3:ReplicateTags",
        "s3:ObjectOwnerOverrideToBucketOwner"
      ],
      "Resource": "arn:aws:s3:::{{bucketPrefix}}*/*"
    },
    {
      "Sid": "DecryptSourceKMS",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "{{sourceKmsArn}}",
      "Condition": {
        "StringLike": {
          "kms:ViaService": "s3.{{sourceRegion}}.amazonaws.com"
        }
      }
    },
    {
      "Sid": "EncryptDestinationKMS",
      "Effect": "Allow",
      "Action": [
        "kms:Encrypt",
        "kms:GenerateDataKey"
      ],
      "Resource": "{{destinationKmsArn}}",
      "Condition": {
        "StringLike": {
          "kms:ViaService": "s3.{{destinationRegion}}.amazonaws.com"
        }
      }
    }
  ]
}
